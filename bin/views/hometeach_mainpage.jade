        script.
            $('#blog').click(function(e){
                e.preventDefault();
                $('#comment').removeClass('active');
                $(this).addClass('active');
                window.frames['hometeach'].document.location.href ='hometeach-blog.html';
            });
            $('#comment').click(function(e){
                e.preventDefault();
                $('#blog').removeClass('active');
                $(this).addClass('active');
                window.frames['hometeach'].document.location.href ='hometeach-comment.html';
            });
