        script(type='text/javascript').
            window.setInterval(iFrameHeight, 10);
            function iFrameHeight() {
                var Ifr1= document.getElementById("Ifr1");
                var subWeb = document.frames ? document.frames["Ifr1"].document : Ifr1.contentDocument;
                if(Ifr1 != null && subWeb != null) {
                    Ifr1.height = subWeb.body.scrollHeight;
                }
            }